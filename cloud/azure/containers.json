{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerGroupName": {
      "type": "string",
      "defaultValue": "coinmarket-group",
      "metadata": {
        "description": "CoinMarket Container Group"
      }
    },
    "collectorCpuCores": {
      "type": "string",
      "metadata": {
        "description": "The number of CPU cores to allocate to the container. Must be an integer."
      },
      "defaultValue": "0.2"
    },
    "collectorMemoryInGb": {
      "type": "string",
      "metadata": {
        "description": "The amount of memory to allocate to the container in gigabytes."
      },
      "defaultValue": "0.1"
    }
  },
  "variables": {
    "influxdbname": "influxdb",
    "influxdbimage": "influxdb:latest",
    "webapiname": "webapi",
    "webapiimage": "bityun.azurecr.io/coinmarket-webapi:1.0",
    "collectorname": "collector",
    "collectorimage": "bityun.azurecr.io/coinmarket-collector:1.0",
    "mysqlname": "mysql",
    "mysqlimage": "mysql:5",
    "portalname": "alpha-hunter",
    "portalimage": "bityun.azurecr.io/alpha-hunter:v5"
  },
  "resources": [
    {
      "name": "[parameters('containerGroupName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-10-01",
      "location": "eastus",
      "properties": {
        "containers": [
          {
            "name": "[variables('influxdbname')]",
            "properties": {
              "image": "[variables('influxdbimage')]",
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGb": 1.0
                }
              },
              "volumeMounts": [
                {
                  "name": "coinmarket-influx-storage",
                  "mountPath": "/var/lib/influxdb"
                }
              ]
            }
          },
          {
            "name": "[variables('mysqlname')]",
            "properties": {
              "image": "[variables('mysqlimage')]",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGb": 0.5
                }
              },
              "environmentVariables": [
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "1q2w#E$R17q4"
                }
              ],
              "volumeMounts": [
                {
                  "name": "coinmarket-mysql-storage",
                  "mountPath": "/var/lib/mysql"
                }
              ],
              "ports": [
                {
                  "port": 3306
                }
              ]
            }
          },
          {
            "name": "[variables('portalname')]",
            "properties": {
              "image": "[variables('portalimage')]",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGb": 0.5
                }
              },
              "ports": [
                {
                  "port": 80
                }
              ]
            }
          },
          {
            "name": "[variables('webapiname')]",
            "properties": {
              "image": "[variables('webapiimage')]",
              "resources": {
                "requests": {
                  "cpu": 0.5,
                  "memoryInGb": 0.5
                }
              },
              "ports": [
                {
                  "port": 5000
                }
              ]
            }
          },
          {
            "name": "[concat(variables('collectorname'), '-k10-index-calc')]",
            "properties": {
              "image": "[variables('collectorimage')]",
              "command": [
                "/apps/start_collect.sh",
                "k10_index_calc"
              ],
              "resources": {
                "requests": {
                  "cpu": "[parameters('collectorCpuCores')]",
                  "memoryInGB": "[parameters('collectorMemoryInGb')]"
                }
              }
            }
          },
          {
            "name": "[concat(variables('collectorname'), '-k10-daily-rank')]",
            "properties": {
              "image": "[variables('collectorimage')]",
              "command": [
                "/apps/start_collect.sh",
                "k10_daily_rank"
              ],
              "resources": {
                "requests": {
                  "cpu": "[parameters('collectorCpuCores')]",
                  "memoryInGB": "[parameters('collectorMemoryInGb')]"
                }
              }
            }
          },
          {
            "name": "[concat(variables('collectorname'), '-huobi')]",
            "properties": {
              "image": "[variables('collectorimage')]",
              "command": [
                "/apps/start_collect.sh",
                "huobi"
              ],
              "resources": {
                "requests": {
                  "cpu": "[parameters('collectorCpuCores')]",
                  "memoryInGB": "[parameters('collectorMemoryInGb')]"
                }
              }
            }
          }
        ],
        "osType": "Linux",
        "imageRegistryCredentials": [
          {
            "server": "bityun.azurecr.io",
            "username": "bitYun",
            "password": "rdwaWGpOyKN0OYz3HRr7EdY3mGUa=Vem"
          }
        ],
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": "3306"
            },
            {
              "protocol": "tcp",
              "port": "5000"
            },
            {
              "protocol": "tcp",
              "port": "80"
            }
          ]
        },
        "volumes": [
          {
            "name": "coinmarket-influx-storage",
            "azureFile": {
              "shareName": "coinmarket-influx",
              "storageAccountName": "bityunstore",
              "storageAccountKey": "eCHLMoEfO2XiH+yT3h7WHj0gg9nURTkh3wVW31ogwY1WP71FbskEhXq4hZf9EAwELvL/i5J+waE5rQyfZAbgNQ=="
            }
          },
          {
            "name": "coinmarket-mysql-storage",
            "azureFile": {
              "shareName": "coinmarket-mysql",
              "storageAccountName": "bityunmysql",
              "storageAccountKey": "3qAqRGEhoBE6LtKG5IRls1edXiR8+iZcRHdP2wSsWjxW2XPbXyFMj6UnNEIEb/l3cBd8sGf1iSrwtzEIHEnnPQ=="
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('containerGroupName'))).ipAddress.ip]"
    }
  }
}
